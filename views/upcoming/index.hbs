<h1>{{title}}</h1>

<a href="/upcoming/add">New Assignment</a>
<table class="table table-striped table-hover">
    <tr>
        <th>Course</th>
        <th>Assignment</th>
        <th>Due</th>
    </tr>
    {{#each upcoming}}
        <tr>
            <td>{{ this.course }}</td>
            <td>{{ this.assignment }}</td>
            <td>{{ this.due }} </td>/td>
            <td>
                <a href="{{this.link}}">Go to</a> |
                <a href="/upcoming/edit/{{ this._id }}">Update</a> |
                <a href="/upcoming/delete/{{ this._id }}">Delete</a>
            </td>
        </tr>
    {{/each}}
</table>